


<div class="row" ng-controller="myWizard">
    <div class="col-sm-8 col-sm-offset-2">

        <!--      Wizard container        -->
        <div class="wizard-container">

            <div class="card wizard-card" data-color="orange" id="wizardProfile">
              
                    <!--        You can switch ' data-color="orange" '  with one of the next bright colors: "blue", "green", "orange", "red"          -->

                    <div class="wizard-header">
                        <h3>
                            <b>BUILD</b> YOUR DEVICE <br>
                            <small>This information will let us know more about DEVICE.</small>
                        </h3>
                    </div>

                    <div class="wizard-navigation">
                        <ul class="nav nav-pills">
                            <li><a href="#" ng-class="{'active-tab':tabVal==1}">UNIT</a></li>
                            <li><a href="#" ng-class="{'active-tab':tabVal==2}">FIELDS</a></li>
                            <li><a href="#" ng-class="{'active-tab':tabVal==3}">RULES</a></li>
                            <li><a href="#" ng-class="{'active-tab':tabVal==4}">FINISH</a></li>
                        </ul>
                    </div>
                    <div class="tab-content">
                        <!--Group Ekleme Ekranı-->
                        <div class="row" ng-show="tabVal===1">
                            <div class="col-sm-10 col-sm-offset-1">
                                <table class="table">
                                    <tr>
                                        <td><label>GrupAdı</label></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control" ng-model="unit.name" placeholder="...">
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!--Field Ekranı-->
                        <div class="row" ng-show="tabVal===2">
                            <div class="col-sm-10 col-sm-offset-1">
                                <table class="table">
                                    <tr>
                                        <td><label>Id</label></td>
                                        <td><label>Field Name</label></td>
                                        <td><label>Field Type</label></td>
                                    </tr>
                                    <tr ng-repeat="item in unit.fields">
                                        <td>
                                            <input type="text" class="form-control" ng-model="item.id" placeholder="...">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control" ng-model="item.fieldName" placeholder="...">
                                        </td>
                                        <td>
                                            <select name="country" class="form-control" ng-model="item.fieldType">
                                                <option value="{{item}}" ng-repeat="item in fieldType ">
                                                    {{item}}
                                                </option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div class="col-sm-10 col-sm-offset-1">
                                <div class="pull-left">
                                    <input type='button' class='btn btn-previous btn-fill btn-default btn-sm' name='previous' ng-click="addRow()" value='Add Field' />
                                </div>
                            </div>
                        </div>

                        <!--Field Kuralları-->
                        <div class="row" ng-show="tabVal===3">
                            <div class="col-sm-10 col-sm-offset-1">
                                <table class="table">
                                    <tr>
                                        <td><label>Kurallar</label></td>
                                        <td><label>SetField</label></td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control" placeholder="...">
                                        </td>
                                        <td>
                                            <select name="country" class="form-control">
                                                <option value="Afghanistan">Integer  </option>
                                                <option value="Albania"> String </option>
                                                <option value="...">...</option>
                                            </select>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <!--Apı Key Ekleme EKranı-->
                        <div class="row" ng-show="tabVal===4">
                            <div class="col-sm-10 col-sm-offset-1">
                                <table class="table">
                                    <tr>
                                        <td><label>Apı Key</label></td>
                                        <td><label>Get Example Write</label></td>
                                        <td><label>Read Example Write</label></td>


                                    </tr>
                                    <tr>
                                        <td>
                                            <input type="text" class="form-control" placeholder="...">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control" placeholder="...">
                                        </td>
                                        <td>
                                            <input type="text" class="form-control" placeholder="...">
                                        </td>

                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>


                    <div class="wizard-footer height-wizard">
                        <div class="pull-right">
                            <input type='button' class='btn btn-next btn-fill btn-warning btn-wd btn-sm' name='next' ng-click="nextTab()" value='Next' />
                            <input type='button' class='btn btn-finish btn-fill btn-warning btn-wd btn-sm' name='finish' value='Finish' />

                        </div>

                        <div class="pull-left">
                            <input type='button' class='btn btn-previous btn-fill btn-default btn-wd btn-sm' name='previous' ng-click="prevTab()" value='Previous' />
                        </div>
                        <div class="clearfix"></div>
                    </div>

               
            </div>


        </div> <!-- wizard container -->
    </div>

    <!--Silincek-->
    <br />
    <div class="row">
         <pre>
                {{modelAsJson}}
</pre>
    </div>
    <!--****************************-->
</div><!-- end row -->

@section Scripts
{
    <script src="~/Scripts/App/Wizard/index.js"></script>
}