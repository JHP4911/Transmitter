
@{
    ViewBag.Breadcrumb = new Breadcrumb(new Crumb[] {
        new Crumb("Unit", "", "fa-dashboard"),
         new Crumb("Unit1", "", "fa-dashboard")
    });
}
<div ng-controller="unitController" ng-init="initController('@ViewBag.Id')">
    @*<nvd3 options="options" data="data" class="with-3d-shadow with-transitions"></nvd3>*@

    <!-- charts -->
    <div class="row">
        <!-- Line chart -->
        <div ng-repeat="field in fields"
             class="col-md-3">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <i class="fa fa-bar-chart-o"></i>
                    <h3 class="box-title">{{field.Name}}</h3>
                </div>
                <div ng-if="field.fieldType!='Location'" class="box-body">
                    <nvd3 options='options'  data='field.fieldValue'></nvd3>
                </div>
                <div ng-if="field.fieldType=='Location'" class="box-body">
                    <ng-map zoom="11" center="{{field.fieldValue[0].values[0].Value}}">
                        <marker ng-repeat="p in field.fieldValue[0].values"
                                position="{{p.Value}}"                              
                                title="time: {{ticksToDate(p.CreateTime)}}"></marker>
                    </ng-map>
                </div>

            </div>
        </div>
        <!-- /.Line chart -->
    </div>
    <!--/charts-->
   
</div>


